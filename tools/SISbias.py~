# import modules
import time, sys, signal
import numpy as np
sys.path.append('/home/amigos/NASCORX-master/base/')
import Cryo

def Loatt(ch=0):
    '''
    DESCRIPTION
    ================

    ARGUMENT
    ================
        1. : 
            Type: 

    RETURN
    ================
    Nothing.
    '''
    signal.signal(signal.SIGINT, signal.SIG_DFL)
    box = Cryo.mixer()
    while 1:
        print('INPUT SIS Voltage: 0 -- 30 [mV]')
        ret = raw_input()
        voltage = float(ret)
        box.set_sisv(Vmix=voltage, ch=ch)

if __name__ == '__main__':
    Loatt()

